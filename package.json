    "drizzle-orm": "^0.29.3",
    "elysia": "latest"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "bun-types": "latest",
    "concurrently": "^8.2.2",
    "daisyui": "^4.6.0",
    "drizzle-kit": "^0.20.13",
    "prettier": "^3.2.1",
